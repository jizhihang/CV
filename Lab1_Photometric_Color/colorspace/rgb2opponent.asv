function [output_image, titles] = rgb2opponent(input_image)
% converts an RGB image into opponent color space
    [R, G, B] = getColorChannels(input_image);
    titles = ["Opponent red", "Opponent blue", "Opponent green", "Converted image"];
    inverse_R = (R - G) / sqrt(2);
    inverse_G = (R + G - 2 * B) / sqrt(6);
    inverse_B = (R + G + B) / sqrt(3);
    output_image = cat(3, inverse_R, inverse_G, inverse_B);
end

